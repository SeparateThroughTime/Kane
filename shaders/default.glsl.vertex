#version 330 core
layout (location=0) in vec3 aPos;
layout (location=1) in vec4 aColor;
layout (location=2) in vec2 aUV;
layout (location=3) in float aTexID;


out vec4 fColor;
out vec2 fUV;
out float fTexID;

void main(){
	fColor = aColor;
	fUV = aUV;
	fTexID = aTexID;
	gl_Position = vec4(aPos, 1.0);
}